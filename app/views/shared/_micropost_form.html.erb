<%= form_for @micropost do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.text_area :content, :maxlength => 140 %>
    <div class="char-count">characters left: <span id="char-count" /></div>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
